age = int(input("Enter your age: "))

if age >= 18:
    print("You are old enough to drive.")
elif age == 17:
    print("You need 1 more year to learn to drive.")
else:
    print(f"You need {18-age} years to learn to drive.")

my_age = 18
your_age = int(input("Enter your age: "))

if your_age >= my_age:
    if your_age == my_age:
        print(f"You are the same age as me.")
    elif your_age == 19:
        print("You are 1 year older than me")
    else:
        print(f"You are {your_age - my_age} years older than me")
else:
    if your_age == 17:
        print("You are 1 year older than me")
    else:
        print(f"I am {my_age-your_age} years older than you")

a = int(input("Enter number one: "))
b = int(input("Enter number two: "))

print(f"{a} is greater than {b}") if a > b else print(f"{a} is smaller than {b}")
